<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<CheckBoxPreference
		android:defaultValue="false"
		android:key="UseWS"
		android:summary="@string/pref_description_use_web_service"
		android:title="@string/pref_title_use_web_service" />
	<EditTextPreference
		android:defaultValue="@string/pref_default_base_url"
		android:inputType="text"
		android:key="BaseURL"
		android:maxLines="1"
		android:selectAllOnFocus="false"
		android:singleLine="true"
		android:title="@string/pref_title_base_url" />
	<ListPreference
		android:defaultValue="360"
		android:entries="@array/pref_sync_frequency_titles"
		android:entryValues="@array/pref_sync_frequency_values"
		android:key="SyncFrequency"
		android:negativeButtonText="@null"
		android:positiveButtonText="@null"
		android:title="@string/pref_title_sync_frequency" />
	<ListPreference
		android:defaultValue="1"
		android:entries="@array/pref_http_request_method_titles"
		android:entryValues="@array/pref_http_request_method_values"
		android:key="HttpRequestMethod"
		android:negativeButtonText="@null"
		android:positiveButtonText="@null"
		android:title="@string/pref_title_http_request_method" />
</PreferenceScreen>